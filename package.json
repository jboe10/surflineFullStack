{
  "name": "srfline",
  "version": "1.0.0",
  "description": "surfline full stack app",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix surflineClient",
    "startAuth": "nodemon views/auth.js",
    "startUser": "nodemon views/user.js",
    "client": "npm start --prefix surflineClient",
    "dev": "concurrently \"npm run startAuth\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix surflineClient && npm run build --prefix surflineClient"
  },
  "author": "Jboe",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "heroku": "^7.47.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.13",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.6"
  }
}
